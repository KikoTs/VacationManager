@model TeamCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamToCreate.Name" class="control-label"></label>
                <input asp-for="TeamToCreate.Name" class="form-control" />
                <span asp-validation-for="TeamToCreate.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamToCreate.LeaderId" class="control-label"></label>
                <select asp-for="TeamToCreate.LeaderId" class="form-control">
                    @foreach (AppUser user in Model.UsersWithNoTeam)
                    {
                        <option value="@user.Id">@user.FirstName @user.LastName</option>
                    }
                </select>
                    <span asp-validation-for="TeamToCreate.LeaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
